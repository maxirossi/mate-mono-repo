{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@Shared/*": [
        "src/Modules/Shared/*"
      ],
      "@Modules/*": [
        "src/Modules/*"
      ],
      "@User/*": [
        "src/Modules/User/*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}